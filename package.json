{
  "name": "full-stack-analytics-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm -w api start",
    
    "dev:api": "npm run dev -w api -- -p 3001",
    "dev:web": "npm run dev -w web -- -p 3000",
    
    "dev:vanna": "cd apps/vanna-ai && .\\venv\\Scripts\\uvicorn main:app --reload",
    "dev": "npm-run-all --parallel dev:api dev:web dev:vanna",
    "db:push": "npm -w api run db:push",
    "db:seed": "npm -w api run db:seed",
    "build:api": "npm run build -w api",
    "build:web": "npm run build -w web",
    "build": "npm run build:api && npm run build:web"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}